{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": [
      false
    ],
    "max-line-length": [
      true,
      256
    ],
    "indent": [
      true,
      "tabs",
      1
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-before-private",
          "static-before-instance",
          "variables-before-functions"
        ]
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "no-reference": false,
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-trailing-underscore"
    ]
  }
}